<project name="M4" default="all" basedir=".">
	
	<target name="init">
		<property name="classes" value="build"/>
		<property name="jar" value="jar"/>
		<property name="doc" value="apidoc"/>
		<property name="src" location="src/"/>
		<property name="lib" location="lib/"/>
		<path id="build.classpath">
			<fileset dir="${lib}">
				<include name="*.jar"/>
			</fileset>
		</path>
	</target>
	
	<target name="prepare" depends="init">
		<mkdir dir="${classes}"/>
		<mkdir dir="${jar}"/>
		<mkdir dir="${doc}"/>
	</target>
	
	<target name="compile" depends="prepare">
        <javac verbose="no" srcdir="${src}" destdir="${classes}" includeantruntime="false">
        	<classpath refid="build.classpath"/>
        </javac>
	</target>
	
	<target name="jar" depends="compile">
        <jar basedir="${classes}" destfile="${jar}/AntLabRun.jar" includes="edu/gatech/oad/antlab/**">
            <manifest>
                <attribute name="Main-Class" value="edu.gatech.oad.antlab.pkg1.AntLabMain" />
        		<attribute name="Class-Path" value="${build.classpath}" />
            </manifest>
        </jar>
	</target>
	
	<target name="run" depends="jar">
		 <java jar="${jar}/AntLabRun.jar" fork="true" classpath="${build.classpath}" />
	</target>
	
	<target name="javadoc">
		<javadoc sourcepath="${src}" access="public" destdir="${doc}" classpath="${compile_classpath}">
      		<package name="edu.cs2335.antlab.pkg3"/>
      		<bottom>
          		<![CDATA[<i>Copyright &#169; 2011 Team Trademark TM CS2340.  All Rights Reserved.</i>]]>
      		</bottom>
  		</javadoc>
	</target>
	
	<target name="all" depends="run,javadoc" />

	<target name="clean">
		<delete dir="${classes}"/>
		<delete dir="${jar}"/>
		<delete dir="${javadoc}"/>
	</target>
</project>